---
import Link from "./Link.astro";

export interface Props {
  href: string;
  alt?: boolean;
  styles?: string;
}

const { href, alt, styles } = Astro.props as Props;

const baseStyles =
  "px-4 py-3 rounded-md text-white font-semibold focus-visible:outline-white border border-primary-orange transition";
const mainStyles = "bg-primary-orange hover:bg-primary-orangehover";
const altStyles = "hover:bg-primary-orangehover";
---

<Link {href} styles={`${baseStyles} ${alt ? altStyles : mainStyles} ${styles}`} data-link-button>
  <slot />
</Link>
