---
import CodeEditor from "../components/CodeEditor.astro";
import Layout from "../components/Layout.astro";
import ButtonLink from "../components/ui/ButtonLink.astro";
---

<Layout title="Welcome to Astro.">
  <main class="flex flex-col max-w-7xl w-full mx-auto mt-32">
    <section class="grid grid-cols-2 gap-4 mt-12">
      <div class="space-y-1 mt-10" data-info>
        <h3 class="text-3xl font-medium text-primary-orange selection:bg-white">Hi! My name's</h3>
        <h2 class="text-7xl font-bold selection:bg-primary-orange">Tom Hine</h2>
        <p
          class="text-gray-400 text-lg font-medium selection:bg-white selection:text-primary-orange"
        >
          Lorem ipsum dolor sit amet consectetur adipisicing elit.
        </p>
        <div class="pt-8">
          <ButtonLink href="#projects">Go to projects</ButtonLink>
        </div>
      </div>
      <CodeEditor />
    </section>
  </main>
</Layout>

<script>
  import { gsap } from "gsap";

  gsap.from("[data-info]", { duration: 0.7, y: 50, opacity: 0 })
</script>